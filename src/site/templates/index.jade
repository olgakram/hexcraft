extends layout

block vars
  - var title = 'HEXCRAFT'
  - var bodyClass = 'index-page'

block content
  .block
    header
      a.logo(href="/")
      .description
        h1 HEXCRAFT
        p Логическая игра
    footer
      a.play(href='/game') Играть
      .arrow

  .block.wrap.news-content(ng-controller="newsCtrl as news" ng-show="news.list.length")
    h1 Новости
    .item(ng-repeat="item in news.list")
      .title-wrapper(ng-class="{'only-title': !item.content}")
        h3.title(ng-bind="item.title")
        label.date(ng-bind="item.createdAt | newsDateFilter")
      p(ng-bind="item.content" ng-if="item.content")

  .block.wrap
    include:markdown ./about.md

  include ./_footer.jade